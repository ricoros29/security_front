@inject IGlobalState GlobalState
@inject NavigationManager navigation

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">Seguridad Usuarios</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav flex-column">
        @if (GlobalState.Session == null)
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                    <i class="bi bi-box-arrow-in-right"></i> Inicio de sesión
                </NavLink>
            </div>
        }
        else
        {
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/home" Match="NavLinkMatch.All">
                    <Icon Name="IconName.HouseDoorFill" /> Inicio
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/user/find">
                    <Icon Name="IconName.Search" /> Consultar
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/user/create">
                    <Icon Name="IconName.PersonFill" /> Nuevo
                </NavLink>
            </div>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="/logout">
                    <i class="bi bi-box-arrow-left"></i>Cerrar sesión
                </NavLink>
            </div>
        }
    </nav>
</div>
